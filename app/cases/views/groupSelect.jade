label Group
x-rha-select-loading-indicator(loading='groupsLoading')
  ui-select(
    theme='bootstrap',
    id='rha-case-search_groups',
    ng-disabled='!securityService.loginStatus.isLoggedIn',
    ng-model='CaseService.group',
    ng-change='onchange()')
    ui-select-match(placeholder='Select a Group') {{$select.selected.name}}
    ui-select-choices(
      repeat='group in CaseService.groups | filter: $select.search',
      style='overflow: auto;')
      div {{group.name}}
