div#redhat-access-case
  div.container-fluid
    div.row
      div.col-xs-12.col-no-padding
        rha-list-filter(postfilter='filterCallback', prefilter='onFilter')
    div.row
      div.col-xs-12
        div(ng-show='CaseListService.cases.length == 0 && !loadingCaseList') No cases found with given filters.
        div(ng-show='loadingCaseList') Loading...
        div(style='margin-bottom: 0px;', ng-hide='CaseListService.cases.length ==0 || loadingCaseList')
          ul.list-group
            a.list-group-item(
              ng-repeat='case in casesOnScreen',
              ui-sref='.edit({id: "{{case.case_number}}"})',
              ng-class='{"active": $index == selectedCaseIndex && selectedCasePage == currentPage}',
              ng-click='selectCase($index)') {{case.case_number}} {{case.summary}}
    div.row(ng-hide='itemsPerPage > CaseListService.cases.length || loadingCaseList')
      div.col-xs-12
        div
          pagination.pagination-sm(
            boundary-links='true',
            rotate='false',
            direction-links='false',
            total-items='CaseListService.cases.length',
            on-select-page='selectPage(page, this)',
            items-per-page='itemsPerPage',
            page='currentPage',
            max-size='maxSize',
            previous-text='<',
            next-text='>',
            first-text='<<',
            last-text='>>')
